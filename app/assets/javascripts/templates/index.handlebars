{{#if userLoggedIn}}
  <header class="small-header">
    <h1>Pluto</h1>
    <div class="header-actions">
      <button {{action 'signOut'}}>Sign Out</button>
    </div>
  </header>
  <form class="entry-form">
    <ul>
      <li>
        <input type="text" name="time" />
      </li>
      <li>
        <label for="onsite">On-site</label>
        <input type="radio" name="location" id="onsite" value="onsite" checked="checked" />
        <label for="remote">Remote</label>
        <input type="radio" name="location" id="remote" value="remote" />
      </li>
    </ul>
    <button type="submit">Log it.</button>
  </form>
{{else}}
  <header class="large-header">
    <h1>Pluto</h1>
    <h2>Keeper of Time</h1>
  </header>
  <content class="login-content">
    <p>This app is designed to track hours worked in a day, and wether they are remote or onsite, and that's it. No extra bells or whistles.</p>
    {{#link-to 'sign-up'}}Sign Up{{/link-to}} or {{#link-to 'sign-in'}}Sign in{{/link-to}}
  </content>
{{/if}}
